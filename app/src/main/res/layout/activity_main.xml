<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaddff"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/start_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/stop_bt"
        android:layout_marginStart="39dp"
        android:text="Start BT"
        android:background="#fff" />

    <Button
        android:id="@+id/stop_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="39dp"
        android:layout_marginTop="26dp"
        android:background="#fff"
        android:text="Stop BT" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_bt"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="List of devices"
        android:textSize="15sp" />


    <ListView
    android:id="@+id/showing_list"
    android:layout_width="match_parent"
    android:layout_height="390dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="121dp" />
</RelativeLayout>
